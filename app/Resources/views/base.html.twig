<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Symfony Workshop{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <h1>This is the header</h1>
        {% endblock %}

        {% block body %}
            <p>This is the body</p>
        {% endblock %}

        {% block footer %}
            <p>This is the footer</p>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
