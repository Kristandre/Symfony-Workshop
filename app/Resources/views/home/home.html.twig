{% extends 'base.html.twig' %}

{%  block title %}
{%  endblock %}

{%  block header %}
    <h1 class="text-center">Velkommen</h1>
{%  endblock %}

{%  block body  %}
{%  for post in posts %}
    <div>
        <h3><a href="{{ path('post_show',{'id':post.id}) }}">{{ post.title }}</a></h3>
        <p>{{ post.summary }}</p>
        <div><span><b>Tags: </b></span>
            {%  for tag in post.tags %}
                <span>#{{ tag }}</span>
            {% endfor %}
        </div>
    </div>
{% endfor %}
{% endblock %}

{%  block footer %}
{%  endblock %}